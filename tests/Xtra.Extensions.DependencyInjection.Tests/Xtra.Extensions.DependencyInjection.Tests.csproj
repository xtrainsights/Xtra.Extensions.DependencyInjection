        <Authors>Michael Monsour</Authors>
        <Company>Xtra Insights</Company>
        <Copyright>Copyright Â© Xxtra Research Pty Ltd 2018-2023</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.1"/>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="18.0.1"/>
        <PackageReference Include="xunit.v3" Version="3.2.1"/>
        <PackageReference Include="xunit.runner.visualstudio" Version="3.1.5"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\src\Xtra.Extensions.DependencyInjection\Xtra.Extensions.DependencyInjection.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <Using Include="Xunit"/>
